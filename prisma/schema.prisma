

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


model User {
  id BigInt @id
  name String 
  email String? @unique
  phone String? @unique
  avatarURL String
  bond String 
  bio String?  
  projects Project[] 

  @@map("users")
}


model Project {
  id  String @id @default(uuid())
  title String @unique
  description String
  studentsRequired Int
  user User @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])
  userId BigInt 
  categoryId Int 
  createdAt DateTime @default(now())

  @@map("projects")
  @@index([userId])
  @@index([categoryId])
}

model Category{
  id Int @id @default(autoincrement())
  name String @unique
  color String? @unique
  projects Project[]

  @@map("categories")
}
