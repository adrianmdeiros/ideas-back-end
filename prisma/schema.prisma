generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    BigInt   @id
  name  String
  email String?  @unique
  phone String?  @unique
  bond  BondType

  student Student?
  servent Servant?

  @@map("users")
}

enum BondType {
  Student
  Servant
}

model Student {
  studentId BigInt @id
  user      User   @relation(fields: [studentId], references: [id])

  courseId Int
  course   Course @relation(fields: [courseId], references: [id])

  @@index([studentId])
  @@index([courseId])
  @@map("students")
}

model Course {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  students Student[]

  @@map("courses")
}

model Servant {
  servantId BigInt @id
  user      User   @relation(fields: [servantId], references: [id])

  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])

  Project Project[]

  @@index([servantId])
  @@index([departmentId])
  @@map("servants")
}

model Department {
  id   Int    @id @default(autoincrement())
  name String @unique

  servents Servant[]

  @@map("departments")
}

model Project {
  id               String @id @default(uuid())
  title            String @unique
  description      String @db.VarChar(1000)
  studentsRequired Int

  modality   Modality @relation(fields: [modalityId], references: [id])
  modalityId Int

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  servant   Servant @relation(fields: [servantId], references: [servantId])
  servantId BigInt

  @@index([modalityId])
  @@index([categoryId])
  @@index([servantId])
  @@map("projects")
}

model Modality {
  id   Int    @id @default(autoincrement())
  name String @unique

  Project Project[]

  @@map("modalities")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  projects Project[]

  @@map("categories")
}
